      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"node_id\": \"{{join_node_id}}\",\n  \"raft_address\": \"{{join_raft_addr}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/raft/join",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "raft",
            "join"
          ]
        }
      }
    },
